{
	"name": "Extension",
	"description": "Extension",
	"version": "0.0.1",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content-script.js"]
		}
	],
	"host_permissions": [
		"chrome-extension://*/background.html",
		"https://*.google.com/",
		"http://*.google.com/"
	  ],
	"options_page" : "background.html",
	"permissions": ["storage", "tabs","alarms", "activeTab", "scripting", "<all_urls>"],
	"action": {
		"default_popup": "popup.html"
	}
}
